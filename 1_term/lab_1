#include <stdio.h>
#define n 4
// КОМИСАРАЙТИС ДАРЬЯ 4 АДМО

//Вверху первая программа через диагонали
//Внизу есть вторая программа!(через switch)
int main(int argc, char *argv[])
{
    int a[n][n];
    int x;//cтолбцы
    int y;//строки
    int znach=1;
    flag = 0;
    for (int d=0;d<n;d++) {// d - диагональ
        if (d%2==0)
        {
            x=0;
            y=d;
            while (y>=0)
            {
                a[x][y]=znach;
                znach++;
                x=x+1; y=y-1;
            }
        }
        else
        {
            x=d;
            y=0;
            if (flag = 1)
            {
                a[x][y]=znach;
                znach++;
                x=x-1; y=y+1;
            }
        }
    }
    for (int d=1;d<n;d++) {
        if (d%!2==0)
        {
            x=d;
            y=n-1;
            if (flag = 1)
            {
                a[x][y]=znach;
                znach++;
                x=x+1; y=y-1;
            }
        }
        else
        {
            x=n-1;
            y=d;
            while (y<=n-1)
            {
                a[x][y]=znach;
                znach++;
                x=x-1; y=y+1;
            }
        }
    }
    for (int i = 0;i<n;i++)
    {
        for (int j = 0;j<n;j++)
        {
        printf("%d  ",a[i][j]);
        }
            printf("\n");
    }

    return 0;
}


